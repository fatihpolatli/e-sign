<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>2.1.6.RELEASE</version>
		<relativePath/>
		<!-- lookup parent from repository -->
	</parent>
	<groupId>com.esign</groupId>
	<artifactId>signer</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>signer</name>
	<description>Demo project for Spring Boot</description>

	<properties>
		<java.version>1.8</java.version>
		<baseDir>C:/ma3api-java-bundle/lib</baseDir>
		<project.build.directory>C:\Users\Lenovo\Downloads\signer\signer\target</project.build.directory>
		<signer-version>2.2.1</signer-version>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
		</dependency>

		<dependency>
			<groupId>com.esign.signer</groupId>
			<artifactId>ma3api-asic</artifactId>
			<version>${signer-version}</version>
		</dependency>

		<dependency>
			<groupId>com.esign.signer</groupId>
			<artifactId>ma3api-asn</artifactId>
			<version>${signer-version}</version>
		</dependency>


		<dependency>
			<groupId>com.esign.signer</groupId>
			<artifactId>ma3api-certvalidation</artifactId>
			<version>${signer-version}</version>
		</dependency>

		<dependency>
			<groupId>com.esign.signer</groupId>
			<artifactId>ma3api-cmssignature</artifactId>
			<version>${signer-version}</version>
		</dependency>

		<dependency>
			<groupId>com.esign.signer</groupId>
			<artifactId>ma3api-common</artifactId>
			<version>${signer-version}</version>
		</dependency>
		<dependency>
			<groupId>com.esign.signer</groupId>
			<artifactId>ma3api-crypto</artifactId>
			<version>${signer-version}</version>
		</dependency>
		<dependency>
			<groupId>com.esign.signer</groupId>
			<artifactId>ma3api-crypto-gnuprovider</artifactId>
			<version>${signer-version}</version>
		</dependency>
		<dependency>
			<groupId>com.esign.signer</groupId>
			<artifactId>ma3api-sunprovider</artifactId>
			<version>${signer-version}</version>
		</dependency>
		<dependency>
			<groupId>com.esign.signer</groupId>
			<artifactId>ma3api-infra</artifactId>
			<version>${signer-version}</version>
		</dependency>

		<dependency>
			<groupId>com.esign.signer</groupId>
			<artifactId>ma3api-cerstore</artifactId>
			<version>${signer-version}</version>
		</dependency>
		<dependency>
			<groupId>com.esign.signer</groupId>
			<artifactId>ma3api-mssclient</artifactId>
			<version>${signer-version}</version>
		</dependency>
		<dependency>
			<groupId>com.esign.signer</groupId>
			<artifactId>ma3api-pades</artifactId>
			<version>${signer-version}</version>
		</dependency>

		<dependency>
			<groupId>com.esign.signer</groupId>
			<artifactId>ma3api-signature</artifactId>
			<version>${signer-version}</version>
		</dependency>

		<dependency>
			<groupId>com.esign.signer</groupId>
			<artifactId>ma3api-smartcard</artifactId>
			<version>${signer-version}</version>
		</dependency>
		<dependency>
			<groupId>com.esign.signer</groupId>
			<artifactId>ma3api-xmlsignature</artifactId>
			<version>${signer-version}</version>
		</dependency>
		<dependency>
			<groupId>com.esign.signer</groupId>
			<artifactId>akiscif</artifactId>
			<version>2.6.1</version>
		</dependency>
		<dependency>
			<groupId>com.esign.signer</groupId>
			<artifactId>asn1rt</artifactId>
			<version>6.6.4</version>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-test</artifactId>
			<scope>test</scope>
		</dependency>

	</dependencies>

	<repositories>
		<repository>
			<id>fatih-polatli-esign</id>
			<url>https://dl.cloudsmith.io/en7wkkDujWB1o7fT/fatih-polatli/esign/maven</url>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
			</releases>
			<snapshots>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
			</snapshots>
		</repository>
	</repositories>

	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>repackage</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<mainClass>com.esign.signer.SignerApplication</mainClass>
					<classifier>exec</classifier>
					<includeSystemScope>true</includeSystemScope>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>3.1.1</version>
				<configuration>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>
					<archive>
						<manifest>
							<mainClass>com.esign.signer.SignerApplication</mainClass>
						</manifest>
					</archive>
					<descriptor>src/main/resources/dist.xml</descriptor>
					<finalName>signer-final</finalName>
				</configuration>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-dependencies</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>
                    			${project.build.directory}/lib
							</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							<addClasspath>true</addClasspath>
							<classpathPrefix>lib/</classpathPrefix>
							<mainClass>
								com.esign.signer.SignerApplication
							</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
